<UserControl
    x:Class="BattlegroundsHelper.view.ProbabilityControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BattlegroundsHelper.view"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="100"
    mc:Ignorable="d">
    <Grid>
        <Border
            Background="#23272a"
            BorderBrush="#141617"
            BorderThickness="1">
            <StackPanel Background="White" Orientation="Horizontal">
                <TextBlock
                    x:Name="tierBox"
                    Margin="7"
                    FontFamily="Source Sans Pro"
                    FontSize="15"
                    FontWeight="Black"
                    Foreground="Black"
                    Text="Tier" />
                <TextBlock
                    x:Name="percentageBox"
                    Margin="7"
                    FontFamily="Source Sans Pro"
                    FontSize="15"
                    FontWeight="Black"
                    Foreground="Black"
                    Text="0%" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
